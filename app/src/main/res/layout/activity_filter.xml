<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="codereye.tio.kos.cari.google.com.lbskosan.FilterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_urutkanberdasarkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urutkan Berdasarkan"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <Spinner
            android:id="@+id/pilihan"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

        <TextView
            android:id="@+id/textview_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <LinearLayout
            android:id="@+id/harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_harga1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:hint="Rp. 500.000"
                android:textSize="15dp"
                android:inputType="number"/>

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="-"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/edit_harga2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:hint="Rp.50.000.000"
                android:textSize="15dp"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Jenis_kos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_jeniskos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kos"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:textColor="#000000"
                android:textSize="15dp"/>

            <CheckBox
                android:id="@+id/cbk_Putra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Putra"/>

            <CheckBox
                android:id="@+id/cbk_Putri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Putri"/>

            <CheckBox
                android:id="@+id/cbk_Campur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Campur" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/JamBertamu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_JamBertamu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam Bertamu"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:textColor="#000000"
                android:textSize="15dp"/>

            <Spinner
                android:id="@+id/pilihan_jambertamu"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/PelBinatang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_PelBinatang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pelihara Binatang"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:textColor="#000000"
                android:textSize="15dp"/>

            <Spinner
                android:id="@+id/pilihan_PelBinatang"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_fasilitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fasilitas : "
                android:layout_marginTop="25dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbk1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AC"/>

                <CheckBox
                    android:id="@+id/cbk_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TV"/>

                <CheckBox
                    android:id="@+id/cbk_kamarmandi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kamar Md Dalam" />

                <CheckBox
                    android:id="@+id/cbk_Kipas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kipas Angin" />

                <CheckBox
                    android:id="@+id/cbk_SpringBed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spring Bed" />

                <CheckBox
                    android:id="@+id/cbk_teras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teras" />

                <CheckBox
                    android:id="@+id/cbk_mejabelajar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meja Belajar" />

                <CheckBox
                    android:id="@+id/cbk_Dapur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dapur" />

                <CheckBox
                    android:id="@+id/cbk_Sofa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sofa" />

                <CheckBox
                    android:id="@+id/cbk_Sekamar_2_org"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sekamar Berdua" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="90dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbk4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Internet/Wifi" />

                <CheckBox
                    android:id="@+id/cbk5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kasur" />

                <CheckBox
                    android:id="@+id/cbk_Tmpt_Jemuran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tempat Jemuran"/>

                <CheckBox
                    android:id="@+id/cbk_Kursi_Belajar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kursi Belajar"/>

                <CheckBox
                    android:id="@+id/cbk_Laundry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laundry"/>

                <CheckBox
                    android:id="@+id/cbk_Kulkas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kulkas"/>

                <CheckBox
                    android:id="@+id/cbk_Sekamar_3_orang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sekamar Bertiga"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/background_button_filter"
                android:text="Filter"
                android:textColor="#FFFFFF"
                android:drawableTint="@color/colorwhite"
                android:textStyle="bold"
                android:textSize="16dp"
                android:drawableLeft="@drawable/search"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>


