<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/kost_item_background"
    android:layout_marginTop="25dp">
    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/list_item_gambar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/list_item_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:layout_below="@id/list_item_gambar"
        android:paddingRight="15dp"
        android:text="Sedang Memuat"/>
    <TextView
        android:id="@+id/list_item_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_nama"
        android:text="Sedang Memuat"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        />

</RelativeLayout>